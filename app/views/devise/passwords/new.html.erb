<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email,placeholder: "Email", autofocus: true, class: "text-center login-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn btn-default btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
